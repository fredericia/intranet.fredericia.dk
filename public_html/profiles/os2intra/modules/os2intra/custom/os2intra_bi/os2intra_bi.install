  // Table for storing data of entity exportable bundles.
  $schema['os2intra_bi_plugin'] = array(
    'description' => 'The base table for data of bundles of "os2intra_bi" entities.',
    'fields' => array(
      'id' => array(
        'description' => 'The primary identifier.',
        'type' => 'serial',
